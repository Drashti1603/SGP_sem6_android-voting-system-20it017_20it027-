<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onlinevote"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#2D2E32"
        android:layout_gravity="center"
        android:text=" ONLINE VOTING  \n SYSTEM "/>

    <ProgressBar
        android:id="@+id/main2progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginHorizontal="15dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="#8C6C6C"
        app:cardCornerRadius="25dp">
<!--        android:layout_below="@id/textView3"
-->
        <Button
            android:id="@+id/resultbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="75dp"
            android:textStyle="bold|italic"
            android:onClick="resultbtn"
            android:background="@drawable/buttondesign"
            android:textColor="@color/colorWhite"
            android:text="Result"
            android:textAlignment="center"
            android:textSize="16dp" />

        <Button
            android:id="@+id/voterbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold|italic"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/buttondesign"
            android:onClick="voterbtn"
            android:text="Voter"
            android:textAlignment="center"
            android:textSize="16dp" />

        <Button
            android:id="@+id/adminbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="125dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold|italic"
            android:textColor="@color/colorWhite"
            android:background="@drawable/buttondesign"
            android:onClick="OnClickAdmin"
            android:text="Admin"
            android:textAlignment="center"
            android:textSize="16dp" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>